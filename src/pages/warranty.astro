---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cabinets & Closets">
    <main>
        <div class="video_container">
            <div class="video">
                <div>
                    <video src="/assets/work_with_trust.mp4" autoplay muted loop></video>
                </div>
                <p class="overlay-text">Work with Trust</p>
            </div>
        </div>
        <div class="kitchen_container relative mb-20">
            <div class="flex flex-col md:flex-row">
                <div class="m-2 p-10 md:w-1/2 bg-white border-2 border-purple-500 rounded-md">
                    <h2 class="text-3xl font-bold my-6">One Year Warranty</h2>
                    <p class="text-xl mb-6">
                        We will warranty our labor for one year after the completion of your project. No questions asked. We want to earn not just your business, but the business of every person you know. The only way to do that is by doing things right, and standing behind our work.
                    </p>
                </div>
                <div class="relative m-2 p-10 md:w-1/2 bg-white border-2 border-purple-500 rounded-md">
                    <img src="/assets/modern_red_black_kitchen.jpg" alt="Kitchen Remodeling" class="rounded-md"/>
                    <!-- <div class="absolute w-full h-full top-0 left-0 bg-black opacity-70 -z-10"></div> -->
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .video_container {
        position: relative;
        height: 100vh;
        overflow: hidden;
        transform: translateY(-100px);
    }

    .video {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .video > div {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .video > div > video {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .overlay-text {
        position: absolute;
        font-size: x-large;
        font-weight: bold;
        left: auto;
        color: white;
        background-color: black;
        padding: 10px;
        max-width: 80%;
        white-space: nowrap;
    }
</style>